@import '../../node_modules/jeet/stylus/jeet'
@import './components/messages'
@import './components/page-with-nav'
@import './components/messages/message-item'
@import './components/search/searchbar.styl'
@import './animations'

body-bg = #F4F4F4

body
    overflow-y scroll !important
    background: body-bg
    .mui-app-canvas
        background: body-bg

.pad
    padding 1.6rem

.mui-app-content-canvas
    center(1100px)

.hidden
    display: none

.message-item .message-actions .mui-drop-down-icon .mui-menu
    height auto !important
    transform scale(0.7)
    // transition transform 0.3s, opacity 0.3s, visibility: 0.3s
    transition: all 200ms cubic-bezier(0.215, 0.61, 0.355, 1) 0ms;
    transform-origin: 100% 0

.message-item .message-actions .mui-drop-down-icon.mui-open .mui-menu
    transform scale(1)
    transition-duration 400ms

.mui-overlay
    &.mui-is-shown
        background-color rgba(0, 0, 0, 0)
        transition left 0ms cubic-bezier(0.23, 1, 0.32, 1) 0ms, background-color 150ms cubic-bezier(0.23, 1, 0.32, 1) 0ms

.section
    cf()
    .section-header
        padding: 20px 0
        background-color: #009688
        color:#fff

        h4,h2,h3
            margin-left: 24px
            margin-bottom: 0
            color:#fff
        h4
            padding-top: 0
            color:#B2DFDB;

    .section-body
        col(1)
        background-color: #fff
        .no-messages
            color #B6B6B6
            text-align center
            font-size 16px
            padding 40px 0
.mui-menu-item 
    // border-bottom: 1px solid #eee
    .mui-menu-item-icon
        margin-right 10px

.mui-nested-menu-item
    position relative
    .mui-menu-item
      padding-left: 59px
    .mui-menu-hideable
        .mui-menu-item
          padding-left: 24px
        
    // &:after
    //     content ''
    //     background #727272
    //     border-radius: 50%
    //     left 30px
    //     top 18px
    //     position absolute
    //     height: 13px 
    //     width: 13px
    &:before
        content ''
        width: 0
        height: 0
        position absolute
        right 20px
        top 20px
        border-style: solid
        border-width: 7px 0 7px 5px
        border-color: transparent transparent transparent #ddd
        transition border-color 0.5s

.mui-nested-menu-item.mui-open
    &:before
        border-color: transparent transparent transparent #727272

