.section-header
    padding: 20px 0
    background-color: #009688
    color:#fff

    h4,h2,h3
        margin-left: 24px
        margin-bottom: 0
        color:#fff
    h4
        padding-top: 0
        color:#B2DFDB;


.pad
    padding-top: 0
    padding-bottom 0
    cf()

.formInner
    cf()
    .button-icon
        font-size 14px
        color:rgba(0, 0, 0, 0.87)

    .input
        min-width: 200px
        width 100% !important
        display block

    .msgInput
        display block

    .button-icon
        bottom 2px
        color #fff

    .button-wrap
        position: relative
        .spinner
            margin-left: -17px
        .cancel-button
            margin-left 10px
        .sendButton
            text-align center
            margin-top 14px
            transform scale(1)
            opacity 1
            z-index 5
            transition: all 0.2s ease-in
            &.sending
                color #727272
                .button-icon
                    color: #727272

