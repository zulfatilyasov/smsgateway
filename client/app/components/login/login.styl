.login-form
    z-index: 510
    background: #fff
    max-width: 400px

    .mui-text-field,
    .mui-text-field-input
        width: 100%

    .login-button
        margin-top: 40px

    .register-button
        margin-top: 10px

    .secondary-buttons
        text-align: center
        margin-bottom: 20px

    .auth-error
        text-align center
        transform translateY(8px)
        opacity 1 
        position: absolute
        top: 0
        left: 0
        text-align: center
        width: 100%
        color red
        font-size: 1.2em
        transition: all 0.3s cubic-bezier(0.215, 0.61, 0.355, 1)

        &.hide
            opacity 0
            transform translateY(-10px)
            

    .button-wrap
        position: relative
        text-align: center
        height: 80px

        .login-button,
        .spinner
            top: 0
            left: 0
        .login-button
            width: 100%
            position: absolute
            transform: scale(1)
            opacity: 1
            z-index 5
            transition: all 0.2s ease-in
            &.hide
                opacity: 0
                transform: scale(0.5),
                z-index -1

        .spinner
            position: absolute
            margin-top: 40px
            left: 50%
            z-index: 1
            margin-left: -12px
            top: -15px
            transform: scale(1.0, 1.0)
            opacity 1
            transition: all 0.2s cubic-bezier(0.215, 0.61, 0.355, 1)
            &.hide
                opacity 0
                transform: scale(0.8, 0.8)


.login-wrap
    top: 10%
    width: 400px
    margin-left: -200px
    left: 50%
    position: absolute

.login-header
    margin-bottom: 30px
    font-size: 32px
    text-align: center

