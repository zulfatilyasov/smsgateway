.page-with-nav
  cf()
  .secondary-content
     border-left:1px solid #eee
     overflow: hidden

  @media (min-width:768px)
    .secondary-nav
      col(1/4, gutter:0)
    .secondary-content
      min-height 300px
      col(3/4, gutter:0) 
 
  @media (min-width:965px)
    .secondary-nav
      col(2/9, gutter:0)
    .secondary-content
      col(7/9, gutter:0) 

  @media (min-width:1200px)
    .secondary-nav
      col(0.2, gutter:0)
    .secondary-content
      col(0.8, gutter:0) 
.toolbar
  padding 15px 10px
  padding-right 20px
  border-bottom 1px solid #eee
  position relative
  .form
    position absolute
    top 0
    left 0
    width: 100%;
    height: 280px
    background: #fff;
    border-bottom: 1px solid #eee;
    transform: translate(600px, -280px);
    transition all 0.5s cubic-bezier(0.215, 0.61, 0.355, 1)
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.24);
    z-index: 100;
    .form-content
      opacity 0
      transition all 0.5s
    &.open
      transform: translate(0px,0px);
      .form-content
        opacity 1
        transition-delay 0.4s


  .toolbar-content
    cf()
    .header
      col(1/2)
      font-size 22px
      line-height 100%
      padding-top 7px
      padding-left 17px
      color #727272
    .actions
      col(1/2)
      .buttons
        float right
        .search
          margin-left 10px

