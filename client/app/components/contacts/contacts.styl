.contacts
  .buttons
    position relative
    .ramjetA
      position absolute
      width 100%
      height 100%
      background #f4f4f4
      top 0
      left 0
      z-index -1
  .mui-menu-item
    position relative
    .mui-menu-item-data
      display none
    .mui-menu-item-icon
      display none
      opacity: 0.5
      font-size 14px
      position absolute
      right 5px 
      top 0px
      &:hover
        opacity 1

    &:hover
      .mui-menu-item-icon
        display block
