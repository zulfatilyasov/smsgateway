.contacts
  .buttons
    position relative
    .ramjetA
      position absolute
      width 100%
      height 100%
      background #f4f4f4
      top 0
      left 0
      z-index -1
  .handsontable .handsontable:not(.ht_master) table
    box-shadow:none
  .handsontable
    tr:first-child
      td
        background #f4f4f4
        font-weight bold
        &.listbox
          background #fff
          font-weight normal

    .htAutocompleteArrow
      color #b7b7b7

  .mui-dialog-window .mui-dialog-window-contents
    max-width: 358px
  .custom-field-dialog
    .field-type
      cf()
      margin-top 20px
      .field-type-label
        float left
        height 56px
        line-height 56px
        display inline-block
        font-size 16px
        color rgba(0, 0, 0, 0.3)
    .mui-drop-down-menu
      width 217px !important
    .mui-drop-down-menu.mui-open .mui-menu
      background-color #fff


  .import
    .Select-control
      background #fff
      .Select-placeholder
        padding-left 10px
    .info
      text-align: center;
      padding: 15px 0;
      color: #727272;
      font-size: 14px;
  .import-actions
    margin-bottom 7px

    

  .file-input
    cursor pointer
    position absolute
    top 0px
    bottom 0px
    right 0px
    left 0px
    width 100%
    opacity 0
  .mui-menu-item
    position relative
    .mui-menu-item-data
      display none
    .mui-menu-item-icon
      display none
      opacity: 0.5
      font-size 14px
      position absolute
      right 5px 
      top 0px
      &:hover
        opacity 1

    &:hover
      .mui-menu-item-icon
        display block
